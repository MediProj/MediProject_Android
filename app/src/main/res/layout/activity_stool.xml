<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:weightSum="8" android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_weight="2"
        style="@style/Title" android:id="@+id/title" android:text="대변 횟수 측정"/>

    <RelativeLayout
        android:layout_weight="5"
        style="@style/Body">

        <TextView
        android:id="@+id/tv_stool_num"
        android:text="총 1회 기록"
        style="@style/Content"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
        android:text="대변 + 1회를 등록하시겠습니까?"
        style="@style/Content"
        android:layout_above="@+id/tv_stool_num"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <Button android:id="@+id/Bnt_prev" style="@style/Bt_prev"/>
    <Button android:id="@+id/Bnt_next" style="@style/Bt_next"/>
    </RelativeLayout>

</LinearLayout>